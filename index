<script>

const bgMusic = document.getElementById("bgMusic");
const finalMusic = document.getElementById("finalMusic");
const video = document.getElementById("angelVideo");

let yesScale = 1; // tracks YES button growth

function startExperience() {
    bgMusic.volume = 1.0;
    bgMusic.play();
    nextPage(2);
}

function nextPage(num) {
    document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
    document.getElementById("page" + num).classList.add("active");
}

video.addEventListener("play", () => {
    bgMusic.volume = 0.1;
});

video.addEventListener("pause", () => {
    bgMusic.volume = 1.0;
});

function stopVideoAndNext() {
    video.pause();
    video.currentTime = 0;
    bgMusic.volume = 1.0;
    nextPage(4);
}

/* Runaway NO + Growing Glowing YES */
function moveNo() {
    const btn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");

    // Move NO randomly
    btn.style.position = "absolute";
    btn.style.top = Math.random() * 70 + "%";
    btn.style.left = Math.random() * 70 + "%";

    // Grow YES slightly each time
    yesScale += 0.05;
    yesBtn.style.transform = `scale(${yesScale})`;

    // Add glowing effect
    yesBtn.style.boxShadow = "0 0 15px #fff, 0 0 30px #ff69b4, 0 0 45px #ff1493";
}

/* Celebrate */
function celebrate() {
    bgMusic.pause();
    finalMusic.play();
    nextPage(5);
    launchConfetti();
    startStars();
}

function launchConfetti() {
    const canvas = document.getElementById("confettiCanvas");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    let pieces = [];
    for (let i = 0; i < 200; i++) {
        pieces.push({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height - canvas.height,
            size: Math.random() * 8 + 4,
            speed: Math.random() * 3 + 2
        });
    }

    function update() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        pieces.forEach(p => {
            ctx.fillStyle = `hsl(${Math.random()*360},100%,60%)`;
            ctx.fillRect(p.x, p.y, p.size, p.size);
            p.y += p.speed;
        });
        requestAnimationFrame(update);
    }

    update();
}

function startStars() {
    setInterval(() => {
        const star = document.createElement("div");
        star.classList.add("star");
        star.innerHTML = "‚ú®";
        star.style.left = Math.random() * 100 + "vw";
        star.style.fontSize = Math.random() * 20 + 15 + "px";
        document.body.appendChild(star);
        setTimeout(() => star.remove(), 4000);
    }, 300);
}

</script>

